# Coverage Configuration for pytest
[coverage:run]
branch = True
source = backend/app
omit =
    */tests/*
    */migrations/*
    */__pycache__/*
    */venv/*

[coverage:report]
# Minimum coverage percentage
fail_under = 75
precision = 2
show_missing = True
skip_covered = False

exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstract
    @abstractmethod
    except ImportError:
    pass

[coverage:html]
directory = htmlcov
